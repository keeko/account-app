<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	
	<title>{{ plattform_name }} Account Application</title>
	
	<!-- Styles -->
	<link href="{{ resource_url("/assets/bootstrap/dist/css/bootstrap.min.css") }}" rel="stylesheet">
	<link href="{{ resource_url("/assets/font-awesome/css/font-awesome.min.css") }}" rel="stylesheet">
	<link href="{{ resource_url("/keeko/account-app/public/css/account.css") }}" rel="stylesheet">
	
	{% for style in styles %}
	<link href="{{ resource_url(style) }}" rel="stylesheet">
	{% endfor %}
</head>
<body class="devdocs">
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span> 
					<span class="icon-bar"></span> 
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="{{ base }}">{{ plattform_name }} Account Application</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<!--				
					{% if user.isGuest() %}
					<li><a href="{{ base }}/login">Login</a></li>
					<li><a href="#"><i class="fa fa-user" aria-hidden="true"></i> Guest</a></li>
					{% else %}
					<li><a href="#"><i class="fa fa-user" aria-hidden="true"></i> {{ user.getDisplayName() }}</a></li>
					{% endif %}
					 
						<li><a href="{{ base }}/reference">Reference</a></li>
						<li><a href="{{ base }}/guides">Guides</a></li>
					-->
					{{ user_widget|raw }}
				</ul>
			</div>
		</div>
	</nav>

	{% autoescape false %}
	<main class="container">
		<div class="row">
			<div class="col-md-9">
				{{ main }}
			</div>
			<div class="col-md-3">
				<ul class="list-group">
					{% if user.isGuest() %}
					<li class="list-group-item"><a href="{{ base }}/register">Register</a></li>
					<li class="list-group-item"><a href="{{ base }}/forget-password">Forget Password</a></li>
					{% else %}
					<li class="list-group-item">
						<i class="fa fa-dashboard" aria-hidden="true"></i> 
						<a href="{{ base }}/">Dashboard</a>
					</li>
					<li class="list-group-item">
						<i class="fa fa-user" aria-hidden="true"></i> 
						<a href="{{ base }}/profile">Profile</a>
					</li>
					<li class="list-group-item">
						<i class="fa fa-key" aria-hidden="true"></i> 
						<a href="{{ base }}/change-password">Change Password</a>
					</li>
					<li class="list-group-item">
						<i class="fa fa-sign-out" aria-hidden="true"></i> 
						<a href="{{ base }}/logout">Logout</a>
					</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</main>
	{% endautoescape %}

	<!-- Scripts -->
	<script src="{{ resource_url("/assets/jquery/jquery.min.js") }}" type="text/javascript"></script>
	<script src="{{ resource_url("/assets/bootstrap/dist/js/bootstrap.min.js") }}" type="text/javascript"></script>
	{% for script in scripts %}
	<script src="{{ resource_url(script) }}" type="text/javascript"></script>
	{% endfor %}
</body>
</html>
