<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	
	<title>{{ global.plattform_name }} Account Application</title>
	
	<!-- Styles -->
	<link href="{{ resource_url("/assets/bootstrap/dist/css/bootstrap.min.css") }}" rel="stylesheet">
	<link href="{{ resource_url("/assets/font-awesome/css/font-awesome.min.css") }}" rel="stylesheet">
	<link href="{{ resource_url("/keeko/account-app/public/css/account.css") }}" rel="stylesheet">
	
	{% for style in page.getStyles() %}
	<link href="{{ resource_url(style) }}" rel="stylesheet">
	{% endfor %}
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span> 
					<span class="icon-bar"></span> 
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="{{ locations.app_url }}">{{ global.plattform_name }} Account Application</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					{{ account_widget|raw }}
				</ul>
			</div>
		</div>
	</nav>

	{% autoescape false %}
	<main class="container">
		{{ main }}
	</main>
	{% endautoescape %}

	<!-- Scripts -->
	<script src="{{ resource_url("/assets/jquery/jquery.min.js") }}" type="text/javascript"></script>
	<script src="{{ resource_url("/assets/bootstrap/dist/js/bootstrap.min.js") }}" type="text/javascript"></script>
	{% for script in page.getScripts() %}
	<script src="{{ resource_url(script) }}" type="text/javascript"></script>
	{% endfor %}
</body>
</html>
